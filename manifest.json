{
  "manifest_version": 3,
  "name": "HH Job AutoApply",
  "description": "AI-powered job application automation for HH.ru with personalized cover letters",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "cookies"
  ],
  "host_permissions": [
    "https://hh.ru/*",
    "https://*.hh.ru/*",
    "https://api.hh.ru/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://hh.ru/*", "https://*.hh.ru/*"],
      "js": ["content-scripts/hh-injector.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://hh.ru/vacancy/*", "https://*.hh.ru/vacancy/*"],
      "js": ["content-scripts/hh-vacancy.js"],
      "css": ["content-scripts/hh-vacancy.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "panel/panel.html"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content-scripts/network-interceptor.js"],
      "matches": ["https://hh.ru/*", "https://*.hh.ru/*"]
    }
  ]
}
