{
  "name": "applyhawk-monorepo",
  "version": "1.0.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/js-yaml": "^4.0.9",
    "sharp": "^0.34.5"
  },
  "private": true,
  "scripts": {
    "build": "bun run build:core && bun run build:extension",
    "build:core": "bun --cwd packages/core run typecheck",
    "build:extension": "bun --cwd packages/extension run build",
    "build:web": "cd packages/web && bunx vite build",
    "dev:web": "cd packages/web && bunx vite",
    "watch:extension": "bun --cwd packages/extension run watch",
    "lint": "biome check --write .",
    "format": "biome format --write ."
  },
  "workspaces": ["packages/*"]
}
